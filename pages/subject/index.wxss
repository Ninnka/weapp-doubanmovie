/* pages/subject/index.wxss */
.root{
    padding: 4px 8px;
}
.header{
    width: 100%;
    height: 160px;
    border: 1px solid red;
    display: flex;
    justify-content: space-between;
    font-size: 0px;
}
.main-img-wrapper{
    flex-grow: 0;
    flex-shrink: 0;
    height: 160px;
    width: 36%;
}
.main-img{
    width: 100%;
    height: 100%;
}

.main-desc-wrapper{
    flex-grow: 1;
    flex-shrink: 0;
    margin-left: 16px;
}
.main-desc-wrapper text{
    line-height: 40px;
    margin-left: 4px;
}
.desc-title{
    font-size: 18px;
}
.desc-year{
    font-size: 14px;
}
