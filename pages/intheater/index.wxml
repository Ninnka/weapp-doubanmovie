<swiper indicator-dots="{{indicatorDots}}" autoplay="true" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item[0]}}" class="slide-image"/>
      <image src="{{item[1]}}" class="slide-image"/>
      <image src="{{item[2]}}" class="slide-image"/>
    </swiper-item>
  </block>
</swiper>
